<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="bg-gray-900 text-gray-100 min-h-screen flex items-center justify-center"
  >
    <div class="w-full max-w-md bg-gray-800 rounded-lg shadow-lg p-8">
      <h2 class="text-3xl font-bold mb-6 text-center">Login</h2>
      <% if (typeof error !== 'undefined') { %>
      <div class="mb-4 text-red-400 text-center"><%= error %></div>
      <% } %>
      <form action="/auth/login" method="POST" class="space-y-4">
        <div>
          <label class="block mb-1" for="email">Email:</label>
          <input
            type="email"
            name="email"
            id="email"
            required
            class="w-full px-3 py-2 rounded bg-gray-700 text-gray-100 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <div>
          <label class="block mb-1" for="password">Password:</label>
          <input
            type="password"
            name="password"
            id="password"
            required
            class="w-full px-3 py-2 rounded bg-gray-700 text-gray-100 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <button
          type="submit"
          class="w-full py-2 bg-blue-600 hover:bg-blue-700 rounded text-white font-semibold"
        >
          Login
        </button>
      </form>
      <p class="mt-4 text-center text-gray-400">
        Don't have an account?
        <a href="/auth/register" class="text-blue-400 hover:underline"
          >Sign up</a
        >
      </p>
    </div>
  </body>
</html>
