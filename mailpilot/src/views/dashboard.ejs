<%- include('layouts/header') %>

<div class="p-8">
  <h1 class="text-3xl font-bold mb-4 text-blue-300">Dashboard</h1>

  <div class="grid grid-cols-2 gap-6">
    <div class="bg-gray-800 shadow p-6 rounded-lg">
      <h2 class="text-lg font-semibold text-gray-300">Contacts</h2>
      <p class="text-2xl text-blue-400"><%= contactCount %></p>
    </div>
    <div class="bg-gray-800 shadow p-6 rounded-lg">
      <h2 class="text-lg font-semibold text-gray-300">Campaigns</h2>
      <p class="text-2xl text-blue-400"><%= campaignCount %></p>
    </div>
  </div>

  <div class="mt-10">
    <h2 class="text-xl font-semibold mb-4 text-blue-200">Recent Activity</h2>
    <ul class="space-y-2">
      <% recentCampaigns.forEach(c => { %>
      <li class="bg-gray-700 rounded p-3">
        <span class="font-semibold text-blue-300"><%= c.title %></span>
        <span class="text-gray-400 ml-2">(<%= c.status %>)</span>
        <span class="ml-2 text-gray-400"
          >Sent: <%= c.sentAt ? c.sentAt.toLocaleString() : 'â€”' %></span
        >
      </li>
      <% }) %> <% if (recentCampaigns.length === 0) { %>
      <li class="text-gray-400">No recent campaigns.</li>
      <% } %>
    </ul>
  </div>
</div>

<%- include('layouts/footer') %>
